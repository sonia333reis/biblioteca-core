@model biblioteca.Models.Booking

@{
    ViewData["Title"] = "Fazer uma Reserva";
}

<h4>Fazer uma Reserva</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Escolha o livro para reserva
                <select asp-for="Book.BookID" class="form-control" asp-items="ViewBag.BookID"></select>
            </div>

            <div class="form-group">
                Será uma reserva para o usuário...
                <select asp-for="User.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>

            <br />

            <p class="text-danger">@ViewBag.Mensagem</p>

            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectAllBookings">Voltar</a>
</div>