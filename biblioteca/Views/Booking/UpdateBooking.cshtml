@model biblioteca.Models.Booking

<h4>Editar Reserva Realizada</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingID" class="form-control" />
            <div class="form-group">
                <label asp-for="BookID" class="control-label"></label>
                <select asp-for="Book.BookID" class="form-control" asp-items="ViewBag.BookID"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="User.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectAllBookings">Voltar</a>
</div>