@{
    ViewData["Title"] = "Página Inicial - Biblioteca";
}

<h3 class="text-center">Biblioteca Virtual</h3>
<hr />

<div class="card">
    <div class="card-header">
        Usuários
    </div>
    <div class="card-body">
        <h5 class="card-title">Gerencie seus usuários</h5>
        <p class="card-text">Na biblioteca virtual, você pode gerenciar os usuários que acessam seus livros</p>
        <a asp-controller="User" asp-action="SelectAllUsers" class="btn btn-primary">Gerenciar</a>
    </div>
</div>
<br />
<div class="card">
    <div class="card-header">
        Livros
    </div>
    <div class="card-body">
        <h5 class="card-title">Gerencie seus livros</h5>
        <p class="card-text">Na biblioteca virtual, você pode gerenciar os seus livros</p>
        <a asp-controller="Book" asp-action="SelectAllBooks" class="btn btn-primary">Gerenciar</a>
    </div>
</div>