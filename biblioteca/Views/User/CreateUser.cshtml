@model biblioteca.Models.User

@{
    ViewData["Title"] = "Criar novo usuário";
}

    <div class="body">
        <h4>Cadastrar Novo Usuário</h4>

        <hr />
        <form id="formCad" action="CreateUser" method="post">
            <div class="col-md-8">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Nome de Usuário
                    <input asp-for="Name" name="name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Email
                    <input asp-for="Email" type="email" name="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    CPF
                    <input asp-for="Cpf" name="cpf" class="form-control" onfocus="javascript: outFormat(this);" onblur="javascript: cpfFormat(this);" maxlength="11" />
                    <span asp-validation-for="Cpf" class="text-danger" ></span>
                </div>
            </div>
            <div class="col-md-2">
                <input type="submit" value="Confirmar" class="btn btn-outline-primary" onclick="return validateUser()" />
            </div>
            <br />
            <a asp-action="SelectAllUsers" class="btn btn-outline-warning"> Voltar <img alt="Voltar" width="20" height="20" src="~/img/icon/icons8-a-esquerda-dentro-de-um-circulo-100.png" /></a>
        </form>
    </div>