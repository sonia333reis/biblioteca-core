@model biblioteca.Models.Book

@{
    ViewData["Title"] = "Criar novo livro";
}

<h4>Cadastrar Novo Livros</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Nome do Livro
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Autores
                <input asp-for="Writter" class="form-control" />
                <span asp-validation-for="Writter" class="text-danger"></span>
            </div>
            <div class="form-group">
                Data de Lançamento
                <input asp-for="Release" class="form-control" type="date" />
                <span asp-validation-for="Release" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectAllBooks">Voltar</a>
</div>